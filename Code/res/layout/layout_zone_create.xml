<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/zone_create_button_back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="zone_create_button_back"
        android:text="@string/back"/>

    <Button
        android:id="@+id/zone_create_button_help"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="zone_create_button_help"
        android:text="@string/help" />

    <Button
        android:id="@+id/zone_create_button_cancel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/zone_create_button_back"
        android:onClick="zone_create_button_cancel"
        android:text="@string/cancel" />

    <Button
        android:id="@+id/zone_create_button_validate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/zone_create_button_cancel"
        android:onClick="zone_create_button_validate"
        android:text="@string/validate" />
    
        <ImageView
        android:id="@+id/image_zone_create"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/zone_create_button_back"
        android:src="@drawable/image" />

</RelativeLayout>
