<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/definition_button_select"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/definition_select"/>
    
    <Button 
        android:id="@+id/definition_button_define"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/definition_button_select"
        android:text="@string/definition_define"/>
    
    <Button 
        android:id="@+id/definition_button_delete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/definition_button_define"
        android:text="@string/definition_delete"/>
    
    <Button 
        android:id="@+id/definition_button_recap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/definition_recap"/>

    <TextView
        android:id="@+id/definition_textview_select"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:visibility="gone"
        android:text="@string/definition_select_text"/>

    <Button
        android:id="@+id/definition_button_select_confirm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:text="@string/definition_select"/>
    
    <ImageView
        android:id="@+id/definition_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/definition_button_define"/>
    
</RelativeLayout>
