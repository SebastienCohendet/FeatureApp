<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/zone_button_create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="zone_button_create"
        android:text="@string/zone_create"/>
    
    <Button 
        android:id="@+id/zone_button_delete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="zone_button_delete"
        android:layout_toRightOf="@+id/zone_button_create"
        android:text="@string/zone_delete"/>
    
    <Button 
        android:id="@+id/zone_button_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="zone_button_edit"
        android:layout_toRightOf="@+id/zone_button_delete"
        android:text="@string/zone_edit"/>

    <ImageView
        android:id="@+id/image_zone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/zone_button_create"
        android:src="@drawable/image" />

</RelativeLayout>
