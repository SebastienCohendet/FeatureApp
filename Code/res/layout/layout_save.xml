<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/save_image_status"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/image"
    	android:layout_marginLeft="450dp"
    	android:layout_marginTop="110dp"/>
    
    <TextView 
        android:id="@+id/save_text_status"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/save_textStatus"
        android:layout_below="@+id/save_image_status"
    	android:layout_marginLeft="450dp"/>
    
    <Button 
        android:id="@+id/save_button_ync"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/save_buttonSync"
        android:layout_below="@+id/save_text_status"
    	android:layout_marginLeft="450dp"/>
    

</RelativeLayout>
