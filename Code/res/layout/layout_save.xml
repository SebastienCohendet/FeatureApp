<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView 
        android:id="@+id/save_text_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_textStatus"
        android:layout_below="@+id/save_image_status"/>
    
    <Button 
        android:id="@+id/save_button_ync"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_buttonSync"
        android:layout_below="@+id/save_text_status"/>
    
    <Button 
        android:id="@+id/save_button_ext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_buttonSyncExt"
        android:layout_below="@+id/save_button_ync"/>
        
        <Button 
        android:id="@+id/max_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MaxId"
        android:layout_below="@+id/save_button_ext"/>
</RelativeLayout>
