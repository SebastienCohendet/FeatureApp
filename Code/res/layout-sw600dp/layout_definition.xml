<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/definition_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/definition_void"/>
    
    <Button 
        android:id="@+id/definition_button_define"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/definition_define"/>
    
    <Button 
        android:id="@+id/definition_button_delete"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/definition_button_define"
        android:text="@string/definition_delete"/>
    
    <Button 
        android:id="@+id/definition_button_union"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/definition_button_delete"
        android:text="@string/definition_union"/>
    
    <Button 
        android:id="@+id/definition_button_recap"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:text="@string/definition_recap"/>

    <Button
        android:id="@+id/definition_void"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:text=""/>
</RelativeLayout>
